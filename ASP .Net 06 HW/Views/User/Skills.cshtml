@model MyUser

@{
    ViewData["Title"] = "My Skills";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Technical Skills</h1>
        <p class="lead text-muted">A collection of technologies and tools I work with daily.</p>
        <hr class="w-25 mx-auto">
    </div>

    <div class="row g-4 justify-content-center">
        @foreach (var skill in Model.Skills)
        {
            <div class="col-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm border-0 skill-card text-center p-3 transition">
                    <div class="card-body">
                        <div class="mb-3 text-primary">
                            <i class="bi bi-code-slash fs-1"></i>
                        </div>
                        <h5 class="card-title fw-bold">@skill</h5>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-5 p-4 bg-light rounded shadow-sm border-start border-primary border-5">
        <h4><i class="bi bi-info-circle me-2"></i>Note</h4>
        <p class="mb-0 text-muted">
            Currently focusing on mastering <strong>ASP.NET Core Web API</strong> and <strong>React</strong> ecosystem 
            to build scalable full-stack applications.
        </p>
    </div>
</div>

<style>
    .skill-card:hover {
        transform: translateY(-10px);
        background-color: #0d6efd;
        color: white !important;
        transition: all 0.3s ease-in-out;
        cursor: pointer;
    }
    .skill-card:hover h5 {
        color: white;
    }
    .transition {
        transition: all 0.3s ease-in-out;
    }
</style>