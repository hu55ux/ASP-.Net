@page "{id:int?}"
@model ASP_NET_03_HW.Pages.DetailsModel

<style>
    .product-detail-container {
        max-width: 800px;
        margin: 50px auto;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .detail-card {
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        border: 1px solid #eee;
    }

    .detail-header {
        background: #f8f9fa;
        padding: 30px;
        border-bottom: 1px solid #eee;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .detail-header h1 {
        margin: 0;
        font-size: 1.8rem;
        color: #2d3436;
    }

    .status-badge {
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .status-available { background: #dff9fb; color: #0984e3; }
    .status-unavailable { background: #ffeaa7; color: #d63031; }

    .detail-body {
        padding: 30px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-top: 20px;
    }

    .info-item {
        padding: 15px;
        background: #fdfdfd;
        border-radius: 8px;
        border: 1px solid #f1f1f1;
    }

    .info-label {
        display: block;
        font-size: 0.8rem;
        color: #636e72;
        text-transform: uppercase;
        margin-bottom: 5px;
        font-weight: bold;
    }

    .info-value {
        font-size: 1.1rem;
        color: #2d3436;
        font-weight: 500;
    }

    .price-tag {
        font-size: 1.5rem;
        color: #00b894;
        font-weight: bold;
    }

    .description-box {
        margin-top: 25px;
        padding: 20px;
        background: #f9f9f9;
        border-left: 4px solid #0984e3;
        border-radius: 4px;
    }

    .btn-back {
        display: inline-block;
        margin-top: 30px;
        text-decoration: none;
        color: #636e72;
        font-weight: 500;
        transition: color 0.2s;
    }

    .btn-back:hover { color: #0984e3; }
</style>

<div class="product-detail-container">
    @if (Model.SelectedProduct != null)
    {
        <div class="detail-card">
            <div class="detail-header">
                <h1>@Model.SelectedProduct.Name</h1>
                <span class="status-badge @(Model.SelectedProduct.IsAvailable ? "status-available" : "status-unavailable")">
                    @(Model.SelectedProduct.IsAvailable ? "In Stock" : "Out of Stock")
                </span>
            </div>

            <div class="detail-body">
                <div class="info-grid">
                    <div class="info-item">
                        <span class="info-label">Product ID</span>
                        <span class="info-value">#@Model.SelectedProduct.Id</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Stock Count</span>
                        <span class="info-value">@Model.SelectedProduct.Count units</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Unit Price</span>
                        <span class="info-value price-tag">$@Model.SelectedProduct.Price.ToString("F2")</span>
                    </div>
                </div>

                <div class="description-box">
                    <span class="info-label">Description</span>
                    <p class="info-value" style="margin:0;">@Model.SelectedProduct.Description</p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert shadow-sm" style="background: #fff; padding: 40px; text-align: center; border-radius: 15px;">
            <h2 style="color: #d63031;">Product Not Found</h2>
            <p>The product you are looking for does not exist or has been removed.</p>
        </div>
    }

    <a asp-page="/Products" class="btn-back">← Back to Product List</a>
</div>